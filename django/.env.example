# Django Environment Variables Example
# Copy this file to .env and update the values

# Django Settings
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For PostgreSQL (Docker/Production)
DATABASE_URL=postgresql://library_user:library_pass123@db:5432/library_db

# For SQLite (Local Development) - Leave DATABASE_URL empty or commented out
# DATABASE_URL=

# Email Configuration (for account activation)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Security Settings (Production)
# SECURE_SSL_REDIRECT=True
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True
